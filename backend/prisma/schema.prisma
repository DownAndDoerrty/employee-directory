// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id           String     @id @default(uuid())
  email        String     @unique
  phoneNumber  String
  forename     String
  surname      String
  profileImage String?    @default("https://www.drupal.org/files/issues/default-avatar.png")
  title        String
  departmentId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt @default(now())
  department   Department? @relation(fields: [departmentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Department {
  id        String         @id @default(uuid())
  name      String         @unique
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt @default(now())
  employees Employee[]     @relation()
}
